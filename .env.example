# =============================================================================
# BEAM PROJECT - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Beam

# =============================================================================
# PRIVY AUTHENTICATION
# =============================================================================

# Privy App ID (Required for authentication)
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here

# Privy App Secret (Required for server-side auth)
PRIVY_APP_SECRET=your_privy_app_secret_here

# =============================================================================
# SUPABASE DATABASE
# =============================================================================

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anon Key (Public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (Private - Server only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# EMAIL SERVICE 
# =============================================================================

# Email service configuration (example: Resend, SendGrid, etc.)
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@beam-app.com

# =============================================================================
# BLOCKCHAIN & SMART CONTRACT
# =============================================================================

# Avalanche Fuji Testnet Configuration
NEXT_PUBLIC_AVALANCHE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
NEXT_PUBLIC_AVALANCHE_CHAIN_ID=43113

# USDC Token Address on Avalanche Fuji Testnet
NEXT_PUBLIC_USDC_AVALANCHE_ADDRESS=0x5425890298aed601595a70AB815c96711a31Bc65

# Sponsor Wallet Configuration
NEXT_PUBLIC_SPONSOR_WALLET_ADDRESS=0x...YOUR_SPONSOR_WALLET_ADDRESS
SPONSOR_WALLET_PRIVATE_KEY=your_sponsor_wallet_private_key_here

# Smart Contract Address (After deployment)
NEXT_PUBLIC_BEAM_CONTRACT_ADDRESS=0x...YOUR_DEPLOYED_CONTRACT_ADDRESS

# =============================================================================
# SECURITY
# =============================================================================

# Security configuration (OTP removed - using email-based auth via Privy)
NEXT_PUBLIC_SECURITY_ENABLED=true

# =============================================================================
# DEPLOYMENT & VERIFICATION
# =============================================================================

# Hardhat/Contract Deployment
PRIVATE_KEY=your_deployment_private_key_here
SNOWTRACE_API_KEY=your_snowtrace_api_key_here

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Optional: Analytics (if using)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Development flags
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false

# Gas reporting
REPORT_GAS=false

# =============================================================================
# EXAMPLE VALUES FOR REFERENCE
# =============================================================================

# Example Privy App ID format:
# NEXT_PUBLIC_PRIVY_APP_ID=clt_xxxxxxxxxxxxxxxxxxxxxxxx

# Example Supabase URL format:
# NEXT_PUBLIC_SUPABASE_URL=https://abcdefghijklmnop.supabase.co

# Example Supabase keys format:
# NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Example email service API key format:
# RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx

# Example wallet addresses format:
# NEXT_PUBLIC_SPONSOR_WALLET_ADDRESS=0x1234567890123456789012345678901234567890
# SPONSOR_WALLET_PRIVATE_KEY=0x1234567890123456789012345678901234567890123456789012345678901234

# Example email configuration:
# FROM_EMAIL=noreply@beam-app.com

# =============================================================================
# IMPORTANT NOTES
# =============================================================================

# 1. NEVER commit your .env file to version control
# 2. Keep your private keys secure and never expose them in client-side code
# 3. Use different keys for development, staging, and production
# 4. Regularly rotate your secrets and API keys
# 5. The SPONSOR_WALLET_PRIVATE_KEY should be the same wallet as NEXT_PUBLIC_SPONSOR_WALLET_ADDRESS
# 6. For production, use strong, randomly generated secrets for OTP_SECRET
# 7. Ensure your Supabase database has the correct schema (see supabase/migrations/)

# =============================================================================
# REQUIRED VS OPTIONAL VARIABLES
# =============================================================================

# REQUIRED for basic functionality:
# - NEXT_PUBLIC_PRIVY_APP_ID
# - PRIVY_APP_SECRET
# - NEXT_PUBLIC_SUPABASE_URL
# - NEXT_PUBLIC_SUPABASE_ANON_KEY
# - SUPABASE_SERVICE_ROLE_KEY
# - NEXT_PUBLIC_SPONSOR_WALLET_ADDRESS
# - SPONSOR_WALLET_PRIVATE_KEY

# OPTIONAL (for enhanced features):
# - NEXT_PUBLIC_BEAM_CONTRACT_ADDRESS (if using smart contract)
# - RESEND_API_KEY (for email notifications via secure delivery)
# - FROM_EMAIL (for email branding)
# - SNOWTRACE_API_KEY (for contract verification)
# - NEXT_PUBLIC_ANALYTICS_ID (for analytics)
